<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#ff000000"
    android:gravity="center_vertical">

    <ImageButton
        android:id="@+id/venvy_start"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/venvy_start_player_icon" />

    <TextView
        android:id="@+id/venvy_position_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/colorAccent" />

    <SeekBar
        android:id="@+id/venvy_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:max="10000"
        android:progress="3" />

    <TextView
        android:id="@+id/venvy_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/colorAccent" />


    <ImageView
        android:id="@+id/venvy_screen"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/venvy_screen_player_icon" />


</LinearLayout>